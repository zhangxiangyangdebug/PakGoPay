<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pakgopay.mapper.AgentInfoMapper">

    <!-- Result map (explicit javaType) -->
    <resultMap id="AgentInfoResultMap" type="com.pakgopay.mapper.dto.AgentInfoDto">

        <id column="agent_no" property="agentNo" javaType="java.lang.Long"/>
        <result column="agent_name" property="agentName" javaType="java.lang.String"/>

        <result column="user_id" property="userId" javaType="java.lang.String"/>
        <result column="user_name" property="accountName" javaType="java.lang.String"/>
        <result column="contact_name" property="contactName" javaType="java.lang.String"/>
        <result column="contact_email" property="contactEmail" javaType="java.lang.String"/>
        <result column="contact_phone" property="contactPhone" javaType="java.lang.String"/>

        <result column="parent_id" property="parentId" javaType="java.lang.String"/>
        <result column="top_agent_id" property="topAgentId" javaType="java.lang.String"/>
        <result column="channel_ids" property="channelIds" javaType="java.lang.String"/>
        <result column="status" property="status" javaType="java.lang.Integer"/>

        <result column="level" property="level" javaType="java.lang.Integer"/>

        <result column="collection_rate" property="collectionRate" javaType="java.math.BigDecimal"/>
        <result column="collection_fixed_fee" property="collectionFixedFee" javaType="java.math.BigDecimal"/>
        <result column="collection_max_fee" property="collectionMaxFee" javaType="java.math.BigDecimal"/>
        <result column="collection_min_fee" property="collectionMinFee" javaType="java.math.BigDecimal"/>

        <result column="pay_rate" property="payRate" javaType="java.math.BigDecimal"/>
        <result column="pay_fixed_fee" property="payFixedFee" javaType="java.math.BigDecimal"/>
        <result column="pay_max_fee" property="payMaxFee" javaType="java.math.BigDecimal"/>
        <result column="pay_min_fee" property="payMinFee" javaType="java.math.BigDecimal"/>

        <result column="create_time" property="createTime" javaType="java.lang.Long"/>
        <result column="create_by" property="createBy" javaType="java.lang.String"/>

        <result column="update_time" property="updateTime" javaType="java.lang.Long"/>

        <!-- Note: DB column name is upeate_by -->
        <result column="upeate_by" property="updateBy" javaType="java.lang.String"/>

        <result column="version" property="version" javaType="java.lang.Integer"/>
        <result column="remark" property="remark" javaType="java.lang.String"/>

    </resultMap>

    <!-- Base columns -->
    <sql id="BaseColumns">
        agent_no,
        agent_name,
        user_id,
        user_name,
        parent_id,
        top_agent_id,
        channel_ids,
        status,
        level,
        collection_rate,
        collection_fixed_fee,
        collection_max_fee,
        collection_min_fee,
        pay_rate,
        pay_fixed_fee,
        pay_max_fee,
        pay_min_fee,
        create_time,
        create_by,
        update_time,
        upeate_by,
        version,
        remark
    </sql>

    <sql id="InsertColumns">
        agent_name,
        user_id,
        user_name,
        parent_id,
        top_agent_id,
        channel_ids,
        status,
        level,
        collection_rate,
        collection_fixed_fee,
        collection_max_fee,
        collection_min_fee,
        pay_rate,
        pay_fixed_fee,
        pay_max_fee,
        pay_min_fee,
        create_time,
        create_by,
        update_time,
        upeate_by,
        version,
        remark
    </sql>

    <sql id="BaseColumnsForJoin">
        ai.agent_no,
        ai.agent_name,
        ai.user_id,
        ai.user_name,
        ui.contact_name,
        ui.contact_email,
        ui.contact_phone,
        ai.parent_id,
        ai.top_agent_id,
        ai.channel_ids,
        ai.status,
        ai.level,
        ai.collection_rate,
        ai.collection_fixed_fee,
        ai.collection_max_fee,
        ai.collection_min_fee,
        ai.pay_rate,
        ai.pay_fixed_fee,
        ai.pay_max_fee,
        ai.pay_min_fee,
        ai.create_time,
        ai.create_by,
        ai.update_time,
        ai.upeate_by,
        ai.version,
        ai.remark
    </sql>


    <!-- Insert -->
    <insert id="insert" parameterType="com.pakgopay.mapper.dto.AgentInfoDto">
        INSERT INTO agent_info (
        <include refid="InsertColumns"/>
        ) VALUES (
        #{agentName},#{userId},#{accountName},#{parentId},#{topAgentId},#{channelIds},#{status},
        #{level},#{collectionRate},#{collectionFixedFee},#{collectionMaxFee},#{collectionMinFee},#{payRate},
        #{payFixedFee},#{payMaxFee},#{payMinFee},#{createTime},#{createBy},#{updateTime},#{updateBy},
        #{version},#{remark}
        )
    </insert>

    <update id="updateByAgentNo" parameterType="com.pakgopay.mapper.dto.AgentInfoDto">
        UPDATE agent_info
        <set>
            <if test="agentName != null">agent_name = #{agentName},</if>
            <if test="accountName != null">user_name = #{accountName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="topAgentId != null">top_agent_id = #{topAgentId},</if>
            <if test="channelIds != null">channel_ids = #{channelIds},</if>
            <if test="status != null">status = #{status},</if>
            <if test="level != null">level = #{level},</if>
            <if test="collectionRate != null">collection_rate = #{collectionRate},</if>
            <if test="collectionFixedFee != null">collection_fixed_fee = #{collectionFixedFee},</if>
            <if test="collectionMaxFee != null">collection_max_fee = #{collectionMaxFee},</if>
            <if test="collectionMinFee != null">collection_min_fee = #{collectionMinFee},</if>
            <if test="payRate != null">pay_rate = #{payRate},</if>
            <if test="payFixedFee != null">pay_fixed_fee = #{payFixedFee},</if>
            <if test="payMaxFee != null">pay_max_fee = #{payMaxFee},</if>
            <if test="payMinFee != null">pay_min_fee = #{payMinFee},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">upeate_by = #{updateBy},</if>
            <if test="version != null">version = #{version},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE agent_no = #{agentNo}
    </update>


    <select id="findByUserId" resultMap="AgentInfoResultMap">
        select
        <include refid="BaseColumns"/>
        from agent_info
        where user_id = #{userId}
        limit 1
    </select>

    <select id="findByUserIds" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM agent_info
        WHERE user_id IN
        <foreach collection="userIds" item="uid" open="(" close=")" separator=",">
            #{uid}
        </foreach>
    </select>

    <select id="getAllAgentInfo" resultMap="AgentInfoResultMap">
        select
        <include refid="BaseColumns"/>
        from agent_info
    </select>


    <!-- Update status -->
    <update id="updateStatus">
        UPDATE agent_info
        SET status = #{status}
        WHERE user_id = #{userId}
    </update>

    <sql id="AgentQueryWhere">
        <where>

            <if test="accountName != null and accountName != ''">
                AND user_name = #{accountName}
            </if>

            <if test="agentName != null and agentName != ''">
                AND agent_name = #{agentName}
            </if>

            <choose>
                <when test="topAgentId != null and topAgentId != ''">
                    AND top_agent_id = #{topAgentId}
                </when>
                <when test="userId != null and userId != ''">
                    AND top_agent_id = (SELECT top_agent_id FROM agent_info WHERE user_id = #{userId})
                </when>
            </choose>
            <choose>
                <when test="maxLevel != null">
                    AND level &gt;= #{maxLevel}
                </when>
                <when test="userId != null and userId != ''">
                    AND level &gt;= (SELECT level FROM agent_info WHERE user_id = #{userId})
                </when>
            </choose>

            <if test="status != null">
                AND status = #{status}
            </if>

        </where>
    </sql>

    <sql id="AgentQueryWhereForJoin">
        <where>

            <if test="accountName != null and accountName != ''">
                AND ai.user_name = #{accountName}
            </if>

            <if test="agentName != null and agentName != ''">
                AND ai.agent_name = #{agentName}
            </if>

            <choose>
                <when test="topAgentId != null and topAgentId != ''">
                    AND ai.top_agent_id = #{topAgentId}
                </when>
                <when test="userId != null and userId != ''">
                    AND ai.top_agent_id = (SELECT top_agent_id FROM agent_info WHERE user_id = #{userId})
                </when>
            </choose>
            <choose>
                <when test="maxLevel != null">
                    AND ai.level &gt;= #{maxLevel}
                </when>
                <when test="userId != null and userId != ''">
                    AND ai.level &gt;= (SELECT level FROM agent_info WHERE user_id = #{userId})
                </when>
            </choose>

            <if test="status != null">
                AND ai.status = #{status}
            </if>

        </where>
    </sql>

    <select id="countByQuery"
            parameterType="com.pakgopay.data.entity.agent.AgentInfoEntity"
            resultType="int">
        SELECT COUNT(1)
        FROM agent_info
        <include refid="AgentQueryWhere"/>
    </select>

    <select id="pageByQuery"
            parameterType="com.pakgopay.data.entity.agent.AgentInfoEntity"
            resultMap="AgentInfoResultMap">
        SELECT
        <include refid="BaseColumnsForJoin"/>
        FROM agent_info ai
        LEFT JOIN user_info ui ON ai.user_id = ui.user_id
        <include refid="AgentQueryWhereForJoin"/>
        ORDER BY ai.agent_no DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="findByAgentNameOrAccountName" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM agent_info
        <where>
            <if test="agentName != null and agentName != ''">
                AND agent_name = #{agentName}
            </if>
            <if test="accountName != null and accountName != ''">
                AND user_name = #{accountName}
            </if>
        </where>
        LIMIT 1
    </select>

    <select id="findByAgentName" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM agent_info
        WHERE agent_name = #{agentName}
        LIMIT 1
    </select>

</mapper>
