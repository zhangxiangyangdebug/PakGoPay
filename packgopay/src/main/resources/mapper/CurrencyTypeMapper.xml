<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pakgopay.mapper.CurrencyTypeMapper">
    <resultMap id="currencyTypeMap" type="com.pakgopay.mapper.dto.CurrencyTypeDTO">
        <id column="id" property="id" javaType="Integer"/>
        <result column="currency_type" property="currencyType" javaType="String"/>
        <result column="name" property="name" javaType="String"/>
        <result column="icon" property="icon" javaType="String"/>
        <result column="create_time" property="createTime" javaType="java.time.LocalDateTime"/>
        <result column="update_time" property="updateTime" javaType="java.time.LocalDateTime"/>
        <result column="create_by" property="createBy" javaType="String"/>
        <result column="update_by" property="updateBy" javaType="String"/>
        <result column="exchange_rate" property="exchangeRate" javaType="java.math.BigDecimal"/>
        <result column="remark" property="remark" javaType="String" />
        <result column="isRate" property="isRate" javaType="Integer"/>
        <result column="currency_accuracy" property="currencyAccuracy" javaType="java.math.BigDecimal"/>
    </resultMap>
    <select id="getAllCurrencyType" resultMap="currencyTypeMap">
        SELECT id, currency_type, name, icon, create_time, create_by, update_time, update_by, exchange_rate, remark, isRate  FROM currency
    </select>

    <insert id="addNewCurrency">
        INSERT INTO currency (currency_type, name, icon, create_time, crate_by, update_time, update_by, exchange_rate, remark, isRate, currency_accuracy) values (#{currencyType},#{name},#{icon},#{createTime},#{createBy},#{updateTime},#{updateBy},#{exchangeRate},#{remark},#{isRate}, #{currencyAccuracy})
    </insert>

    <select id="getCurrencyById" resultMap="currencyTypeMap">
        SELECT id, currency_type, name, icon, create_time, create_by, update_time, update_by, exchange_rate, remark, isRate  FROM currency WHERE id = #{id}
    </select>
</mapper>