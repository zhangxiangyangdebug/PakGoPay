<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pakgopay.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.pakgopay.mapper.dto.UserDTO">
        <id column="user_id" property="userId" javaType="java.lang.String"/>

        <!-- 基本信息 -->
        <result column="login_name" property="loginName" javaType="java.lang.String"/>
        <result column="contact_name" property="contactName" javaType="java.lang.String"/>
        <result column="contact_email" property="contactEmail" javaType="java.lang.String"/>
        <result column="contact_phone" property="contactPhone" javaType="java.lang.String"/>

        <!-- 密钥 / 密码 -->
        <result column="login_secret" property="loginSecret" javaType="java.lang.String"/>
        <result column="login_secret_expire"
                property="loginSecretExpire"
                javaType="java.time.LocalDateTime"/>

        <result column="api_secret" property="apiSecret" javaType="java.lang.String"/>
        <result column="api_secret_expire"
                property="apiSecretExpire"
                javaType="java.time.LocalDateTime"/>

        <result column="password" property="password" javaType="java.lang.String"/>

        <!-- 登录信息 -->
        <result column="last_login_ip" property="lastLoginIP" javaType="java.lang.String"/>
        <result column="last_login_time"
                property="lastLoginTime"
                javaType="java.time.LocalDateTime"/>

        <!-- 审计字段 -->
        <result column="create_time"
                property="createTime"
                javaType="java.time.LocalDateTime"/>
        <result column="created_by" property="createdBy" javaType="java.lang.String"/>

        <result column="updated_time"
                property="updatedTime"
                javaType="java.time.LocalDateTime"/>
        <result column="updated_by" property="updatedBy" javaType="java.lang.String"/>

        <!-- 其他 -->
        <result column="remark" property="remark" javaType="java.lang.String"/>
        <result column="icon" property="icon" javaType="java.lang.String"/>
        <result column="role_id" property="roleId" javaType="java.lang.Integer"/>
        <result column="status" property="status" javaType="java.lang.Integer"/>
    </resultMap>
    <select id="selectAllUser" resultMap="userResultMap">
        SELECT * FROM user_info
    </select>
    <select id="getOneUser" resultMap="userResultMap">
        SELECT user_id, login_name, login_secret, status from user_info where login_name = #{userName} and password = #{password}
    </select>

    <select id="getSecretKey" resultMap="userResultMap">
        SELECT login_secret , login_name FROM USER_INFO WHERE login_name = #{userName} and password = #{password}
    </select>

    <select id="getSecretKeyByUserId" resultType="java.lang.String">
        SELECT login_secret FROM USER_INFO WHERE user_id = ${userId}
    </select>
    
    <update id="bingSecretKey">
        update user_info set login_secret = #{secretKey} where login_name = #{userName}
    </update>

    <update id="setLastLoginTime">
        update user_info set last_login_time = #{lastLoginTime} where user_id = #{userId}
    </update>

    <select id="getOneUserByUserId" resultMap="userResultMap">
        SELECT * FROM user_info where user_id = #{userId}
    </select>

    <insert id="createUser" parameterType="com.pakgopay.mapper.dto.UserDTO">
        INSERT INTO user_info (user_id, login_name, password, role_id, status) VALUES ( #{user.userId}, #{user.loginName}, #{user.password}, #{user.roleId}, #{user.status} )
    </insert>

    <update id="stopLoginUser">
        UPDATE USER_INFO SET status = #{status} where user_id = #{userId}
    </update>

    <delete id="deleteUserByUserId">
        DELETE FROM USER_INFO WHERE user_id = #{userId}
    </delete>

    <select id="loginUserByLoginName" resultMap="userResultMap">
        SELECT * FROM USER_INFO WHERE login_name = #{loginName}
    </select>
</mapper>