<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pakgopay.mapper.RoleMenuMapper">
    <resultMap id="roleMenuInfoMap" type="com.pakgopay.mapper.dto.RoleMenuDTO">
        <result column="role_id" property="roleId" javaType="java.lang.Integer"/>
        <result column="menu_id" property="menuId" javaType="java.lang.String"/>
        <result column="role_name" property="roleName" javaType="java.lang.String"/>
        <result column="remark" property="remark" javaType="java.lang.String"/>
        <result column="create_time" property="createTime" javaType="java.time.LocalDateTime"/>
        <result column="update_time" property="updateTime" javaType="java.time.LocalDateTime"/>
        <result column="update_by" property="updator" javaType="java.lang.String"/>
        <result column="create_by" property="creator" javaType="java.lang.String"/>
    </resultMap>

    <select id="getAllMenuIdsByRoleId" resultType="java.lang.String">
        SELECT menu_id from role_menu where role_id = #{roleId}
    </select>
    <insert id="addRoleMenu" >
        INSERT INTO role_menu (role_id, menu_id, create_time, create_by, update_time, update_by, remark) values
           <foreach collection="info" item="item" index="index" separator=",">
               (#{item.roleId},#{item.menuId},#{item.createTime},#{item.creator},#{item.updateTime},#{item.updator},#{item.remark})
           </foreach>
    </insert>

    <select id="getRoleMenuInfoByRoleId" resultMap="roleMenuInfoMap">
        SELECT t1.role_id, t1.role_name, t1.create_time, t1.update_time, t1.remark, t2.menu_id from role t1 left join role_menu t2 on t1.role_id = t2.role_id where t1.role_id = #{roleId}
    </select>

    <delete id="deleteRoleMenuByRoleId">
        DELETE FROM role_menu where role_id = #{roleId}
    </delete>
</mapper>